<!-- BEGIN: pagination -->
<div class="containerPagination">
        <!-- BEGIN: page_prev -->
        <a href="{PAGEBUTTON_PREV}" class="containerPagination--element">Предыдущая</a>
        <!-- END: page_prev -->
        <!-- BEGIN: page_first -->
        <a href="{PAGEBUTTON_FIRST}" class="containerPagination--element">1</a>
        <!-- END: page_first -->
        <!-- BEGIN: page_items -->
        <a href="{PAGE.link}" class="containerPagination--element {PAGE.class}">{PAGE.num}</a>
        <!-- END: page_items -->
        <!-- BEGIN: page_last -->
        <a href="{PAGEBUTTON_LAST}" class="containerPagination--element">{PAGEBUTTON_MAX}</a>
        <!-- END: page_last -->
        <!-- BEGIN: page_next -->
        <a href="{PAGEBUTTON_NEXT}" class="containerPagination--element">Следующая</a>
        <!-- END: page_next -->
</div>
<!-- END: pagination -->